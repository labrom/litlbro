<labrom.litlbro.widget.ShortcutView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/shortcut"
    android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1">
    
    <labrom.litlbro.widget.IconView android:id="@+id/big_icon"
        android:layout_width="fill_parent" android:layout_height="fill_parent" />
    
    
    <RelativeLayout
        style="@style/shortcutContent"
        android:layout_width="fill_parent" android:layout_height="fill_parent">
        
        <ImageView android:id="@+id/starred" style="@style/shortcutStar" android:visibility="invisible"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentRight="true" android:layout_alignParentTop="true" />
            
	    <TextView android:id="@+id/caption" style="@style/shortcutCaption" android:visibility="invisible"
	        android:layout_width="fill_parent" android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true" />
	    

	    <ImageView android:id="@+id/favicon" style="@style/shortcutFavicon" android:visibility="invisible"
	        android:layout_alignParentLeft="true" android:layout_alignParentTop="true" />
    
        <LinearLayout android:id="@+id/editBar" style="@style/shortcutEditbar"
            android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:visibility="invisible">
            <Button android:id="@+id/starToggle" style="@style/shortcutStarToggleButton"  />
            <Button android:id="@+id/remove" style="@style/shortcutRemoveButton"  />
        </LinearLayout>
        
	</RelativeLayout>
</labrom.litlbro.widget.ShortcutView>