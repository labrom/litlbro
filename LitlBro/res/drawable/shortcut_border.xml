<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/shortcutRoundCorner" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/shortcutStroke" android:color="@color/shortcut_gradient_stroke" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/shortcutRoundCorner" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/shortcutStroke" android:color="@color/shortcut_border_disabled" />
        </shape>
    </item>
    <item >
        <shape>
            <corners android:radius="@dimen/shortcutRoundCorner" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/shortcutStroke" android:color="@color/shortcut_gradient_stroke" />
        </shape>
    </item>
</selector>