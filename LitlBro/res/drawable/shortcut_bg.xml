<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/shortcutRoundCorner" />
            <gradient android:startColor="@color/shortcut_gradient_clear_press" android:endColor="@color/shortcut_gradient_dark_press" android:type="linear" android:angle="270" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/shortcutRoundCorner" />
            <solid android:color="@color/shortcut_bg_disabled" />
        </shape>
    </item>
    <item >
        <shape>
            <corners android:radius="@dimen/shortcutRoundCorner" />
            <gradient android:startColor="@color/shortcut_gradient_clear" android:endColor="@color/shortcut_gradient_dark" android:type="linear" android:angle="270" />
        </shape>
    </item>
</selector>