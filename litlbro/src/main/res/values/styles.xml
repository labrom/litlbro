    <dimen name="progressDrawablePadding">2dp</dimen>
    <dimen name="searchBoxDimen">48dp</dimen>
    <dimen name="searchBoxInsetVert">4dp</dimen>
    <dimen name="searchBoxInsetHoriz">10dp</dimen>
    <dimen name="searchBoxInsetRight">34dp</dimen><!-- searchBoxInsetHoriz + searchBoxDimen / 2 -->
    <dimen name="homeHeaderHeight">68dp</dimen>
    <dimen name="suggestionsOverlayTop">40dp</dimen>
    <dimen name="boxCorner">2dp</dimen>
    <dimen name="optionsButtonDimen">48dp</dimen>

    <style name="controlBar">
    </style>

    <style name="pageTitleProgressLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">#fff0fff0</item>
        <item name="android:padding">6dp</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="optionsPaneBackground">
        <item name="android:background">@color/optionsPaneBg</item>
    </style>
    <style name="optionsPane">
        <item name="android:padding">6dp</item>
    </style>
    <style name="optionsPaneItem">
        <item name="android:textColor">@color/textClear</item>
        <item name="android:textSize">19sp</item>
        <item name="android:shadowColor">@color/textClearShadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="optionsPaneItemBig" parent="@style/optionsPaneItem">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="homeHeader">
        <item name="android:layout_height">@dimen/homeHeaderHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/homeBg</item>
    </style>

    <style name="searchBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/searchBoxDimen</item>
        <item name="android:layout_marginLeft">@dimen/searchBoxInsetHoriz</item>
        <item name="android:layout_marginRight">@dimen/searchBoxInsetHoriz</item>
        <item name="android:background">@drawable/search_box_bg</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">64dp</item>
        <item name="android:textColor">@color/textDarkGray</item>
    </style>

    <style name="suggestions">
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:listDivider">@color/suggestionsSeparator</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/searchBoxInsetHoriz</item>
        <item name="android:layout_marginRight">@dimen/searchBoxInsetHoriz</item>
    </style>
    <style name="suggestion">
        <item name="android:padding">10dp</item>
    </style>
    <style name="suggestionCaption">
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="suggestionUrl">
        <item name="android:textColor">#0000a0</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">3dp</item>
    </style>
    <style name="suggestionIcon">
        <item name="android:padding">8dp</item>
    </style>

    <style name="shortcutsNavigatorView">
    </style>
    <integer name="shortcutPageIndicatorMaskMin">120</integer>
    <style name="shortcuts">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
    <style name="shortcut">
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/shortcut_bg</item>
        <item name="android:layout_margin">6dp</item>
    </style>
    <style name="shortcutContent">
        <item name="android:background">@drawable/shortcut_border</item>
    </style>
    <style name="shortcutCaption">
        <item name="android:background">@drawable/shortcut_caption_strip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textClear</item>
        <item name="android:shadowColor">@color/textClearShadow</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">11dp</item>
    </style>
    <style name="shortcutFavicon">
        <item name="android:background">@drawable/shortcut_favicon_bg</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="shortcutEditbar">
        <item name="android:background">@drawable/shortcut_editbar_bg</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="shortcutRemoveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/shortcut_delete</item>
    </style>
    <style name="shortcutStarToggleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/shortcut_star_toggle</item>
    </style>
    <style name="shortcutStar">
        <item name="android:padding">@dimen/shortcutInset</item>
        <item name="android:src">@drawable/shortcut_star</item>
    </style>
    <dimen name="shortcutRoundCorner">16dp</dimen>
    <dimen name="shortcutRoundCornerSmall">8dp</dimen>
    <dimen name="shortcutRoundCornerInner">16dp</dimen>
    <dimen name="shortcutInset">1px</dimen>
    <dimen name="shortcutStroke">1px</dimen>

    <style name="tipDialogFrame" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="tipLabel">
        <item name="android:background">@drawable/tip_bg</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tipText">
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="tipOK">
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:background">@drawable/tip_button_bg</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
