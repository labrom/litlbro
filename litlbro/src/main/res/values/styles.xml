<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenThemeBase" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>
    <style name="FullscreenTheme" parent="FullscreenThemeBase">
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />














    <style name="controlBar">
    </style>

    <style name="controlBarTitle">
        <item name="android:background">#d0202020</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff0fff0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="controlBarPad">
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="controlBarJsToggle">
    </style>


    <style name="optionsPane">
        <item name="android:background">@color/optionsPaneBg</item>
        <item name="android:padding">6dp</item>
    </style>
    <style name="optionsPaneItem">
        <item name="android:textColor">@color/textClear</item>
        <item name="android:textSize">19sp</item>
        <item name="android:shadowColor">@color/textClearShadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="optionsPaneItemBig" parent="@style/optionsPaneItem">
        <item name="android:textSize">22sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="homeHeader">
        <item name="android:background">@drawable/home_header_bg</item>
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

    <style name="siteTextBox">
        <item name="android:background">@drawable/home_header_box</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="suggestions">
        <item name="android:background">@color/suggestionItem</item>
        <item name="android:cacheColorHint">@color/suggestionItem</item>
        <item name="android:padding">6dp</item>
        <item name="android:divider">@drawable/suggestion_separator</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
    <style name="suggestion">
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/suggestion_bg</item>
    </style>
    <style name="suggestionCaption">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="suggestionUrl">
        <item name="android:textColor">#909090</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">3dp</item>
    </style>
    <style name="suggestionIcon">
        <item name="android:padding">8dp</item>
    </style>

    <style name="shortcutsNavigatorView">
    </style>
    <style name="shortcutsPageIndicator">
        <item name="android:background">@drawable/pager_indicator</item>
        <item name="android:layout_height">5dp</item>
    </style>
    <integer name="shortcutPageIndicatorMaskMin">120</integer>
    <style name="shortcuts">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
    <style name="shortcut">
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/shortcut_bg</item>
        <item name="android:layout_margin">6dp</item>
    </style>
    <style name="shortcutContent">
        <item name="android:background">@drawable/shortcut_border</item>
    </style>
    <style name="shortcutCaption">
        <item name="android:background">@drawable/shortcut_caption_strip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textClear</item>
        <item name="android:shadowColor">@color/textClearShadow</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">left</item>
        <item name="android:padding">11dp</item>
    </style>
    <style name="shortcutFavicon">
        <item name="android:background">@drawable/shortcut_favicon_bg</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="shortcutEditbar">
        <item name="android:background">@drawable/shortcut_editbar_bg</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">right</item>
    </style>
    <style name="shortcutRemoveButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/shortcut_delete</item>
    </style>
    <style name="shortcutStarToggleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/shortcut_star_toggle</item>
    </style>
    <style name="shortcutStar">
        <item name="android:padding">@dimen/shortcutInset</item>
        <item name="android:src">@drawable/shortcut_star</item>
    </style>
    <dimen name="shortcutRoundCorner">16dp</dimen>
    <dimen name="shortcutRoundCornerSmall">8dp</dimen>
    <dimen name="shortcutRoundCornerInner">16dp</dimen>
    <dimen name="shortcutInset">1px</dimen>
    <dimen name="shortcutStroke">1px</dimen>

    <style name="tipDialogFrame" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="tipLabel">
        <item name="android:background">@drawable/tip_bg</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tipText">
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="tipOK">
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:background">@drawable/tip_button_bg</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:padding">4dp</item>
    </style>

</resources>
